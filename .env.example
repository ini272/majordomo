# Environment Configuration for Majordomo
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to git (it's in .gitignore)

# ============================================
# APPLICATION ENVIRONMENT
# ============================================
# Options: development, production
NODE_ENV=development

# ============================================
# BACKEND CONFIGURATION
# ============================================

# JWT Authentication Secret
# Generate a secure random string for production using:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
# CRITICAL: Change this value in production!
SECRET_KEY=your-secret-key-here-change-in-production

# Database Connection
# SQLite (default for local development):
DATABASE_URL=sqlite:///./majordomo.db
# PostgreSQL example (for production):
# DATABASE_URL=postgresql://user:password@localhost:5432/majordomo

# Database Query Logging
# Set to "true" to echo SQL queries to console (useful for debugging)
SQL_ECHO=false

# CORS Configuration
# Comma-separated list of allowed origins, or "*" for all
# Development: http://localhost:3000,http://localhost:5173
# Production: Set to your actual frontend domain(s)
CORS_ORIGINS=*

# ============================================
# AI INTEGRATION (OPTIONAL)
# ============================================

# Groq API Key for AI quest description generation
# Get your free API key from: https://console.groq.com/keys
# Leave empty to disable AI features
GROQ_API_KEY=

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# Frontend API URL
# Local development (default):
VITE_API_URL=http://localhost:8000/api
# Cloudflare tunnel (for mobile testing):
# VITE_API_URL=https://majordomo-backend.trycloudflare.com/api
